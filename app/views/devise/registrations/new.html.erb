<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <span class="require">*</span>
      <%= f.label :name, "Họ tên", class: "form-label" %><br />
      <div class="field input-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Họ tên" %>
      </div>

      <span class="require">*</span>
      <%= f.label :password, "Mật khẩu", class: "form-label" %>
      <br />
      <div class="field input-group">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-lock"></i>
        </span>
        <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
      </div>


      <span class="require">*</span>
      <%= f.label :dat_of_birth, "Ngày sinh", class: "form-label" %><br />
      <div class="field input-group">
        <span class="input-group-text" id="basic-addon1">
          <i class="far fa-calendar-alt"></i>
        </span>
        <%= f.date_field :dat_of_birth, class: "form-control", placeholder: "Ngày sinh" %>
      </div>

      <span class="require">*</span>
      <%= f.label :phone_number, "Số điện thoại", class: "form-label" %><br />
      <div class="field input-group">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-phone-square-alt"></i>
        </span>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Số điện thoại" %>
      </div>
    </div>
    <div class="col-md-6">
      <span class="require">*</span>
      <%= f.label :email, class: "form-label" %><br />
      <div class="field input-group">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-envelope"></i>
        </span>
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>

      <span class="require">*</span>
      <%= f.label :password_confirmation, "Xác nhận lại mật khẩu", class: "form-label" %><br />
      <div class="field input-group">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-lock"></i>
        </span>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Xác nhận lại mật khẩu" %>
      </div>
    </div>
  </div>

  <div class="registration signup">
    <%= f.submit "ĐĂNG KÍ", class: "btn btn-submit", style: "width: 100%" %>
  </div>
<% end %>
